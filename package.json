{
  "name": "renovate-commit-message",
  "version": "0.0.0",
  "devDependencies": {
    "@types/jest": "28.1.8",
    "jest": "28.1.3",
    "jest-diff": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "jest-snapshot": "28.1.3",
    "ts-jest": "28.0.8",
    "typescript": "4.8.3"
  },
  "renovate": {
    "extends": [
      "config:js-lib",
      ":automergeBranch",
      ":automergeMinor",
      ":label(renovate)",
      ":prNotPending",
      ":rebaseStalePrs"
    ],
    "semanticCommits": "enabled",
    "packageRules": [
      {
        "matchDepTypes": [
          "dependencies",
          "peerDependencies"
        ],
        "semanticCommitType": "fix"
      },
      {
        "matchPackageNames": [
          "jest"
        ],
        "matchUpdateTypes": [
          "major"
        ],
        "groupName": "jest monorepo",
        "semanticCommits": "disabled",
        "semanticCommitType": "feat",
        "commitMessage": "commit message",
        "commitMessageAction": "action",
        "commitMessagePrefix": "prefix",
        "commitMessageSuffix": "suffix",
        "commitMessageTopic": "topic",
        "commitMessageExtra": "extra"
      }
    ]
  }
}
